            removeAllChildren("icon-list");
            let query = e("search").value.toLowerCase();
            let unlocked = Object.keys(user.icons);
            for (let icon of icons.filter(x => ((unlockedOnly === e("unlocked").checked) || unlocked.includes(x)) && x.includes(query))) {
                let [rarity, name] = split(icon, "/", 1)
                let body = insertElement("div", insertElement("button", "icon-list", `icon-entry rarity-${rarity}${!unlocked.includes(icon) ? " locked" : ""}`).with("onclick", `send("changeicon", "${icon}")`), "hlist");
                insertElement("img", body).with("src", `//prod.kr/data/icon/${icon}.png`);
                insertElement("p", body, "spacer", name);
            }
            insertElement("div", "icon-list", "spacer");
        }
